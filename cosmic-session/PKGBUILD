pkgname=cosmic-session-git
pkgver=1
pkgrel=1
pkgdesc='cosmic'
arch=('x86_64')
url='https://github.com/pop-os/cosmic-session.git'
license=('GPLv3')
depends=(
cmake
)
makedepends=(
  cargo
  git
)
provides=('cosmic')
source=('git+https://github.com/pop-os/cosmic-session.git'
)

sha256sums=('SKIP')

build() {
    cd $srcdir/cosmic-session
    cargo build --release

}

package() {
  cd $srcdir/cosmic-session
  just rootdir=$pkgdir install
}
