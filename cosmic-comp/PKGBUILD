pkgname=cosmic-comp-git
pkgver=1
pkgrel=1
pkgdesc='cosmic'
arch=('x86_64')
url='https://github.com/pop-os/cosmic-comp'
license=('GPLv3')
depends=(
cmake
)
makedepends=(
  cargo
  git
)
provides=('cosmic')
source=('git+https://github.com/pop-os/cosmic-comp.git'
)

sha256sums=('SKIP')

build() {
    cd $srcdir/cosmic-comp
    cargo build

}

package() {
  cd $srcdir/cosmic-comp
  install -Dm 755 target/debug/cosmic-comp -t "${pkgdir}/usr/bin"
}
